doctype html
html
  head
    link(rel="shortcut icon" type="image/x-icon" href="https://cdn.glitch.com/309c5cca-6250-4906-a738-5feca93112a4%2Ffavicon.ico?1503062906990")
    style
      include wing.css
    style
      include styles.css
    title= "Books for " + search + " - libert ðŸ“–"
  body
    div(class="container")
      div(class="cards horizontal-align vertical-align")
        for book in books
          if book != null
            div(class="card")
              h5(class="card-header")= book.title
              div(class="card-body")
                div(class="row")
                  div(class="col-5 book-cover")
                    img(src=book.image class="responsive-img")
                  div(class="col-7")
                    b Author:
                    span #{book.author}
                    br
                    b Pages:
                    span #{book.pages}
                    br
                    b Rating:
                    span #{book.rating}
                p(class="book-description") #{book.description}
                
              div(class="card-footer center text-center")
                p
                  a(href=book.mobi class="button" target="_blank") mobi
                  span   
                  a(href=book.epub class="button" target="_blank") epub
                  span   
                  a(href=book.pdf class="button" target="_blank") pdf
                a(href="http://jajoosam.tech/pay" class ="button outline") Donate
        script
          include tracking.js